<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= post.title %></h2>
      <img class="img-fluid" src="<%= post.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/post/likePost/<%= post.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= post.likes %></h3>
        <%if(post.user == user.id){ %>
        <form
          action="/post/deletePost/<%= post.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p>
        <!-- ? Username of poster -->
        <%= users.filter(u => String(post.user) ===
        String(u["_id"]))[0].userName %>
      </p>
      <p><%= post.caption %></p>
    </div>

    <!-- ! Comments list -->
    <div>
      <% comments.forEach( c => { %>
      <div>
        <span>
          <!-- ? Username of commenter -->
          <%= users.filter(u => String(c.user) === String(u["_id"]))[0].userName
          %></span
        >
        <span><%= c.comment %></span>
        <span><%= calculate.commentDiff(c.createdAt) %></span>
        <!-- ! Reply to comment -->
        <form action="/post/addReply/<%= c.id %>?_method=POST" method="POST">
          <label for="reply">Reply to comment:</label>
          <textarea name="reply" rows="1" cols="15"></textarea>
          <button type="submit">Reply</button>
        </form>
        <!-- ! Replies to comments list -->
        <div>
          <% replies.filter(r1 => r1.commentId === String(c._id)).forEach( r2 =>
          { %>
          <div>
            <span>
              <!-- ? Username of replier -->
              <%= users.find(u => String(u._id) === String(r2.user)).userName
              %></span
            >
            <span><%= r2.comment %></span>
            <span><%= calculate.commentDiff(r2.createdAt)%></span>
            <span><%= r2._id %></span>
          </div>
          <!-- ! Reply to reply form -->
          <form
            action="/post/addReply/<%= r2._id %>?_method=POST"
            method="POST"
          >
            <label for="reply">Reply to reply:</label>
            <textarea name="reply" rows="1" cols="15"></textarea>
            <button type="submit">Reply</button>
          </form>
          <% }) %>
        </div>
      </div>
      <% }) %>
    </div>

    <!-- ! Add a comment -->
    <div>
      <form action="/post/addComment/<%= post.id %>?_method=POST" method="POST">
        <label for="comment">Add a comment:</label>
        <textarea name="comment" rows="1" cols="15"></textarea>
        <button type="submit">Comment</button>
      </form>
    </div>

    <div>
      <p><%= calculate.postDiff(post.createdAt)%></p>
    </div>
    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
